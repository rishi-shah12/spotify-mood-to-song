<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</head>

<style>
.page-wrapper{
    background-image: linear-gradient( 99deg,  rgba(255,166,0,1) 14.7%, rgba(255,99,97,1) 73% );
}
.title-wrapper{
        padding-top: 2rem;
        text-align: center;
        color: black;
        padding-bottom: 5rem;
}

.row{
    padding-bottom: 1.5rem;
    padding-top: 1.5rem;
    text-align: center;
    font-size: 18px;

}

hr {
    width: 75vw;
    margin: auto;

}

.album-art {
}
.hr-div{
    padding-bottom: 2rem;
    padding-top: 2rem;
}


.title-wrapper hr{
    width: 50vw;
    margin: auto;
    height: 5px;
    color: black;
    opacity: 75;
}
</style>

<div class="page-wrapper">
    <div class="title-wrapper">
        <h1>Your Tracks</h1>
        <p>Say Hello to <u>YOUR</u> Personally Curated Music</p>
        <a class="btn btn-primary" href="{{ url_for('hello_world') }}" role="button">Back</a>
    </div>
    {% for x in range(10) %}
        <div class="container">
            <div class="row">
                <div class="col">
                        <img src={{ tracks[x]["track"]["album"]["images"][1]["url"] }}>
                </div>
                <div class="col">Track: {{ tracks[x]["track"]["name"] }}</div>
                <div class="col">Album: {{ tracks[x]["track"]["album"]["name"] }}</div>
                <div class="col">Artist: {{ tracks[x]["track"]["album"]["artists"][0]["name"]  }}</div>
                <div class="col">
                    <a class="btn btn-secondary" href={{ tracks[x]["track"]["external_urls"]["spotify"] }} role="button">Listen</a>
                </div>
            </div>
        </div>
    <div class="hr-div"><hr style="
        background: linear-gradient(to right, {{ album_art[x][0] }} 0%, {{ album_art[x][0] }} 20%, {{ album_art[x][1] }}  20%, {{ album_art[x][1] }}  40%, {{ album_art[x][2] }}  40%, {{ album_art[x][2] }}  60%, {{ album_art[x][3] }}  60%, {{ album_art[x][3] }}  80%, {{ album_art[x][4] }}  80%, {{ album_art[x][4] }}  100%);
        height: 10px;
        opacity: 100;
    "></div>
    {% endfor %}

</div>
